
page{
    width: 100%;
    height: 100%;
}
.container{
    flex-flow:column nowrap;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 50%;
}
.row{
    flex: 1;
    display: flex;
    width: 90%;
    height: 50%;
    margin: 20rpx 5%;
    overflow: hidden;
}
.row .text{
    flex: 1;
    width: 100%;
    height: 40%;
    font-size: 14px;
    line-height: 26px;
    color: #666;
}
.date{
    padding: 5rpx 0;
}
.bottom{
    width: 100%;
    background: #fff;
    display: flex;
    flex-flow:row nowrap;
    justify-content: center;
    align-items: center;
}
.bottom .btn{
    flex: 1;
    line-height: 2;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin: 30rpx 30rpx;
}
.btn.success{
    background: #4BC1D2;
    color: #fff;
}
.btn.del{
    background: #e64340;
    color: #fff;
}